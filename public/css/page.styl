@font-face
  font-family 'CopseRegular'

  src url('/fonts/Copse-Regular-webfont.eot')
  src url('/fonts/Copse-Regular-webfont.eot?#iefix') format('embedded-opentype'), url('/fonts/Copse-Regular-webfont.woff') format('woff'), url('/fonts/Copse-Regular-webfont.ttf') format('truetype'), url('/fonts/Copse-Regular-webfont.svg#CopseRegular') format('svg')

  font-weight normal
  font-style normal

html, body
  background #222
  height 100%

section#title
  position fixed
  z-index 2

  left 0
  top 0
  width 100%

  text-align right

  background rgba(0,0,0,0.6)

section#title h1
  font 77px/82px 'CopseRegular'
  margin 0 25px
  text-shadow 0 0 3px rgba(0,0,0,0.84)
  -webkit-text-shadow 0 0 3px rgba(0,0,0,0.84)
  -moz-text-shadow 0 0 3px rgba(0,0,0,0.84)

section#title h1 span.left
  color #4093ff

section#title h1 span.right
  color #e8953a

section#content
  margin 100px auto 0 auto
  max-width 850px
  min-width 400px
  background white

  box-shadow 0 0 4px rgba(0,0,0,0.8)
  -webkit-box-shadow 0 0 4px rgba(0,0,0,0.8)
  -moz-box-shadow 0 0 4px rgba(0,0,0,0.8)

  border-radius 3px
  -webkit-border-radius 3px
  -moz-border-radius 3px

  padding 16px 16px 32px 16px

section#container
  overflow hidden

section#container, section#slides
  position absolute
  left 0
  top 0
  width 100%
  height 100%

section#slides
  display none

section#slides > article
  display none
  position absolute

  width 900px
  height 700px

  top 50%
  left 50%
  margin-top -350px
  margin-left -450px

  overflow hidden
  background #fff

  padding 25px

  box-sizing border-box

  border-radius 25px
  -webkit-border-radius 25px
  -moz-border-radius 25px

  transform scale(1)
  -webkit-transform scale(1)
  -moz-transform scale(1)

  font-size 35px
  line-height 68px

  text-align center
  text-shadow rgba(0, 0, 0, 0.2) 0 2px 5px
  -webkit-text-shadow rgba(0, 0, 0, 0.2) 0 2px 5px
  -moz-text-shadow rgba(0, 0, 0, 0.2) 0 2px 5px

section#slides > article.farprev,
section#slides > article.prev,
section#slides > article.current,
section#slides > article.next,
section#slides > article.farnext
  display block

section#slides > article.current
  z-index 3

section#slides > article.prev
  margin-left -1400px


section#slides > article.next
  margin-left 500px

section#slides > article.farprev
  margin-left -2350px

section#slides > article.farnext
  margin-left 1440px

section#slides > article.prev,
section#slides > article.next
  z-index 2
  transform scale(0.8)
  -webkit-transform scale(0.8)
  -moz-transform scale(0.8)

section#slides > article.farprev,
section#slides > article.farnext
  z-index 1
  transform scale(0.5)
  -webkit-transform scale(0.5)
  -moz-transform scale(0.5)

section#slides > article.animated
  transition margin-left 1s, transform 1s
  -webkit-transition margin-left 1s, -webkit-transform 1s
  -moz-transition margin-left 1s, -webkit-transform 1s

/** Various Article Styles */
section#slides > article > section.middle
  display table-cell
  vertical-align middle
  height 650px
  width 850px

section#slides > article p
  margin 0

section#slides > article .full
  width 100%
  height 100%

section#slides > article .half
  width 100%
  height 45%

section#slides > article h1,
section#slides > article h2,
section#slides > article h3
  margin 0

section#slides > article h1
  font-size 58px
  line-height 114px

section#slides > article h2
  font-size 50px
  line-height 106px

section#slides > article h3
  font-size 42px
  line-height 98px

section#slides > article code
  display block
  text-align left

section#slides > article .small
  font-size 24px
  line-height 35px

section#slides > article span.small img
  max-width 600px
  max-height 250px

section#slides > article img
  min-width 400px
  min-height 150px

/** Admin UI */
section#slides > article > textarea.slide-edit
  width 100%
  height 100%
  font-family 'Droid Sans Mono'
  font-size 20px
  line-height 24px
